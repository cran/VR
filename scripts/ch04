conv1 <- function(a, b) {
    ab <- outer(a, b)
    unlist(lapply(split(ab, row(ab) + col(ab)), sum))
}
conv2 <- function(a, b) {
    ab <- outer(a, b)
    tapply(ab, row(ab) + col(ab), sum)
}

a <- runif(1000)
b <- runif(100)
print(unix.time(conv1(a, b)))
print(unix.time(conv2(a, b)))

